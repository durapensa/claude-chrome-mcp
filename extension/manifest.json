{
  "manifest_version": 3,
  "name": "Claude Chrome MCP",
  "version": "2.6.0",
  "description": "Enable Claude Desktop to interact with claude.ai through MCP",
  "permissions": [
    "debugger",
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "notifications",
    "alarms",
    "offscreen"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "ws://localhost:*/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude Chrome MCP"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*.js"
      ],
      "matches": [
        "https://claude.ai/*"
      ]
    }
  ]
}
