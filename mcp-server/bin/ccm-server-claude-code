#!/usr/bin/env node

// Claude Chrome MCP Server for Claude Code
// This executable configures the main MCP server for Claude Code usage

// Set environment variables for Claude Code configuration
process.env.CCM_SERVER_ID = 'claude-code';
process.env.CCM_SERVER_NAME = 'Claude Chrome MCP (Claude Code)';
process.env.CCM_WEBSOCKET_PORT = '54322';

// Start the main server with Claude Code configuration
require('../src/server.js');